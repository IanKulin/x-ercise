{
  "name": "X-ercise Development",
  "build": {
    "dockerfile": "Dockerfile.dev",
    "context": ".."
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "alexcvzz.vscode-sqlite",
        "ms-vscode.vscode-typescript-next",
        "digitalbrainstem.javascript-ejs-support",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "eslint.validate": ["typescript", "javascript"],
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[javascript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        }
      }
    }
  },

  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "X-ercise App",
      "onAutoForward": "notify"
    }
  },

  // Mount SSH keys directly - this works on macOS
  "mounts": [
    "source=${localWorkspaceFolder}/data,target=/app/data,type=bind",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/node/.ssh,type=bind,readonly"
  ],

  "postCreateCommand": "npm install && npm rebuild better-sqlite3",
  "remoteUser": "node",
  "runArgs": ["--name", "x-ercise-dev"],

  "features": {
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    }
  }
}
