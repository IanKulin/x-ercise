<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>X-ercise - Choose Your Set</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/js/main.js" defer></script>
</head>
<body>
    <header>
        <h1>X-ercise</h1>
        <% if (username) { %>
            <p>Welcome, <%= username %>!</p>
        <% } else { %>
            <p id="welcome-message"></p>
        <% } %>
    </header>
    <h2>Choose Your Set</h2>
    <ul>
        <% sets.forEach(set => { %>
            <li>
                <h3><a href="/set/<%= set.slug %>"><%= set.name %></a></h3>
                <p><%= set.description %></p>
                <% if (set.completions > 0) { %>
                    <p>
                        Completed <%= set.completions %> times.
                        <% if (set.last_completed_at) { %>
                            Last completed: <%= set.last_completed_at %>
                        <% } %>
                    </p>
                <% } %>
            </li>
        <% }); %>
    </ul>
</body>
</html>
